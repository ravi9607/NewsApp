<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"

    android:background="@drawable/boarder"
    android:paddingTop="5dp"

    >

    <ImageView
        android:id="@+id/image"
        android:background="@drawable/boarder3"

        android:layout_width="393dp"
        android:layout_height="184dp"


        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Tye to Rahul, no ball, Rahul is swinging blindly here. Fuller and around off, he swings across the line and the ball might have also straightened a touch, whizzes past the outside edge. Oh hang on! The third umpire has called it a no-ball for overstepping. That's a harsh call as replays show Tye had something behind/ on the line"
        android:textColor="#E6000000"
        android:textSize="18sp"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/decp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image" />

    <TextView
        android:id="@+id/decp"
        android:text="Tye to Rahul, no ball, Rahul is swinging blindly here. Fuller and around off, he swings across the line and the ball might have also straightened a touch, whizzes past the outside edge. Oh hang on! The third umpire has called it a no-ball for overstepping. That's a harsh call as replays show Tye had something behind/ on the line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:maxLines="2"
        android:padding="4dp"
        android:textColor="#8A8585"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:text="auther"

        android:textColor="#E8000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/decp" />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"

        android:text="2020-12-12"
        android:textColor="#E8000000"
        android:maxLength="10"
        android:gravity="center"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@+id/author"
        app:layout_constraintTop_toBottomOf="@+id/decp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decp"
        app:layout_constraintVertical_bias="0.454"
        app:srcCompat="@drawable/favorite_24" />




