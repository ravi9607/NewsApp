<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"

    android:background="@drawable/boarder"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Tye to Rahul, no ball, Rahul is swinging blindly here. Fuller and around off, he swings across the line and the ball might have also straightened a touch, whizzes past the outside edge. Oh hang on! The third umpire has called it a no-ball for overstepping. That's a harsh call as replays show Tye had something behind/ on the line"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/decp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image" />

    <TextView
        android:id="@+id/decp"
        android:text="Tye to Rahul, no ball, Rahul is swinging blindly here. Fuller and around off, he swings across the line and the ball might have also straightened a touch, whizzes past the outside edge. Oh hang on! The third umpire has called it a no-ball for overstepping. That's a harsh call as replays show Tye had something behind/ on the line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="4dp"
        android:textColor="#8A8585"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/author"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#8A8585"

        android:maxLength="1000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/decp" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/imageFilterButton"
        android:layout_width="41dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/like"
        app:layout_constraintStart_toEndOf="@+id/author"
        app:layout_constraintTop_toBottomOf="@+id/decp"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:layout_width="41dp"
        android:layout_height="28dp"
        android:onClick="shareNews"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/share"
        app:layout_constraintStart_toEndOf="@+id/imageFilterButton"
        app:layout_constraintTop_toBottomOf="@+id/decp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>