<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dailynews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/news1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/news1"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity android:name=".splash_screen">
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".HealthActivity"></activity>
        <activity android:name=".HeadlineActivity"></activity>
        <activity android:name=".BusinessActivity"></activity>
        <activity android:name=".TechnologyActivity"></activity>
        <activity android:name=".SportsActivity"></activity>
        <activity android:name=".ScienceActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>